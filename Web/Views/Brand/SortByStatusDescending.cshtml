@using Entities
@model IEnumerable<Brand>
@{
    ViewData["Title"] = "BrandList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/css/AdminTable.css" rel="stylesheet" />
@if (Model.Any())
{
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th class="text-white">
                    <a href="/Brand/SortByIdDescending">
                        ID
                    </a>
                </th>
                <th class="text-white">
                    <a href="/Brand/SortByNameDescending">
                        Marka
                    </a>
                </th>
                <th class="text-white">
                    <a href="/Brand/SortByDateDescending">
                        Oluşturulma Tarihi
                    </a>
                </th>
                <th class="text-white">
                    <a href="/Brand/SortByStatus">
                        Statü
                    </a>
                </th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Id</td>
                    <td>@brand.Name</td>
                    <td>@brand.CreateDate</td>
                    <td>
                        @if (brand.Status == true)
                        {
                            <a id="statu" style="padding:2px 12px;border-radius:80%" class="@brand.Status btn-success">
                            </a>
                        }
                        else
                        {
                            <a id="statu" style="padding:2px 12px;border-radius:80%" class="@brand.Status btn-danger">
                            </a>
                        }
                    </td>
                    <td>
                        <a href="/Brand/BrandDelete/@brand.Id/" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/Brand/BrandUpdate/@brand.Id/" class="btn btn-primary">
                            <i class="fa fa-refresh"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-12 text-center">
        <h6>
            <div class="row">
                <div class="col-sm-12 text-center"><span id="Count">@ViewBag.Count</span> Adet Marka Bulunmaktakdır.</div>
                <div class="col-sm-12 text-center">
                    <span id="True">@ViewBag.True</span> tanesi Aktif,
                    <span>
                        @if (@ViewBag.False > 0)
                        {
                            <span id="False">
                                @ViewBag.False
                            </span>
                        }
                        else
                        {
                            <span id="Zero">
                                @ViewBag.False
                            </span>
                        }
                    </span> tanesi Pasif.
                </div>
            </div>
        </h6>
    </div>

}
else
{
    <center>
        <div class="alert alert-danger text-center mt-4" style="width:70%;">
            <div class="mt-1 mb-1">
                <b>Marka Bulunamadı.</b>
            </div>
        </div>
    </center>
}
<div class="text-center">
    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</div>
@await Html.PartialAsync("~/Views/Brand/BrandAdd.cshtml")

